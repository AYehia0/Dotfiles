## Gaps
gaps inner 10
gaps outer 15

font pango:dweep 8
for_window [class=".*"] title_format "<span color='#e4e4e4' font='cherry 7'> > %title</span>"
for_window [class=".*"] floating enable
for_window [class="brave-browser"] fullscreen enable

set $mode_gaps Toggle gaps: (1) on (2) off
bindsym $mod+F12 mode "$mode_gaps"
mode "$mode_gaps" {
    bindsym 1 mode "default", gaps inner all set 15, gaps outer all set 0
    bindsym 2 mode "default", gaps inner all set 1, gaps outer all set 1
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
